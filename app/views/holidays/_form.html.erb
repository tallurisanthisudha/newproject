
<h2>HOLIDAYS MANAGEMENT</h2>
<%= form_with  model: @holiday do |f| %>
    <div class="mb-3">
    <%= f.label :name, style: "display: block", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <div style="color: red">
      <% if @holiday.errors.include?(:name) %>
          <% @holiday.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>


  <div class="mb-3">
  <%= f.label :date, style: "display: block", class: "form-label" %>
  <%= f.text_field :date, class: "form-control" %>
  <div style="color: red">
    <% if @holiday.errors.include?(:date) %>
        <% @holiday.errors.full_messages_for(:date).each do |error_message| %>
          <%= error_message %>.
        <% end %>
    <% end %>
  </div>
</div>
    
<div class="mb-3">
    <%= f.label :year, style: "display: block", class: "form-label" %>
    <%= f.text_field :year, class: "form-control" %>
    <div style="color: red">
      <% if @holiday.errors.include?(:year) %>
          <% @holiday.errors.full_messages_for(:year).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

    <div class="actions ">
        <%= f.submit "Add",class:"loginbutton" %>
    </div>


  <% end %>