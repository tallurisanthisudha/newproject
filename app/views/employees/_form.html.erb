<h1 class="heading">EMPLOYEE MANAGMENT </h1>

<div class="promangsubcont">
<%= form_with model: @employee do |f| %>
  <div class="mb-3">
  <%= f.label :first_name, style: "display: block", class: "form-label" %>
  <%= f.text_field :first_name, class: "form-control" %>
  <div style="color: red">
    <% if @employee.errors.include?(:first_name) %>
        <% @employee.errors.full_messages_for(:first_name).each do |error_message| %>
          <%= error_message %>.
        <% end %>
    <% end %>
  </div>
</div>
 

