
<h1>DESIGNATION MANAGEMENT</h1>
<%= form_with  model: @designation do |f| %>
    <div class="mb-3">
    <%= f.label :Name, style: "display: block", class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
    <div style="color: red">
      <% if @designation.errors.include?(:last_name) %>
          <% @designation.errors.full_messages_for(:last_name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>


  <div class="mb-3">
    <%= f.label :description, style: "display: block", class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <div style="color: red">
      <% if @designation.errors.include?(:description) %>
          <% @designation.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>
    
 

    <div class="actions">
        <%= f.submit "Add",class:"loginbutton" %>
    </div>


  <% end %>
