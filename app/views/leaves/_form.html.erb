
<%= form_with  model: @leave do |f| %>
    <div class="mb-3">
    <%= f.label :name, style: "display: block", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <div style="color: red">
      <% if @leave.errors.include?(:name) %>
          <% @leave.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>


  <div class="mb-3">
    <%= f.label :description, style: "display: block", class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <div style="color: red">
      <% if @leave.errors.include?(:description) %>
          <% @leave.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :no_of_days, style: "display: block", class: "form-label" %>
    <%= f.text_field :no_of_days, class: "form-control" %>
    <div style="color: red">
      <% if @leave.errors.include?(:no_of_days) %>
          <% @leave.errors.full_messages_for(:no_of_days).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

    <div class="actions ">
        <%= f.submit "Add",class:"loginbutton" %>
    </div>


  <% end %>


